---
import Layout from '../../layouts/layout.astro';
import '../../pages/events/styles.css';
import EventCard from '../../components/events/EventCard';
import FilterButton from '../../components/events/FilterButton';

const testEvent = {
  title: "Test Event",
  date: new Date(),
  description:
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla nec purus feugiat, molestie ipsum et, consequat nibh. Etiam non elit dui.",
  imageUrl: "https://via.placeholder.com/150",
  eventUrl: "/",
};
---

<Layout title="Events" description="Upcoming events at WDCC">
  <section class="py-16 text-center">
    <h1 class="text-4xl font-bold mb-4">Upcoming Events</h1>
    <p class="text-lg text-gray-600 max-w-5xl mx-auto">
      WDCC hosts regular workshops, competitions and social events throughout the year.
      We aim to help students develop practical skills that can be used in the workforce.
      We host social events to help students network among peers and with industry people.
    </p>

    <!-- filter button -->
    <div class="my-4">
      <FilterButton onClick={() => console.log('Filter button clicked')} label="Filter By" />
    </div>

    <EventCard event={testEvent} />
  </section>
</Layout>
